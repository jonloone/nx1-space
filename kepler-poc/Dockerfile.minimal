# Minimal Dockerfile for Kepler.gl Demo
FROM nginx:alpine

# Copy static files
COPY public/ /usr/share/nginx/html/
COPY kepler_ground_stations.json /usr/share/nginx/html/data/
COPY nginx.simple.conf /etc/nginx/conf.d/default.conf

# Add health endpoint
RUN echo '{"status":"ok","app":"kepler-demo"}' > /usr/share/nginx/html/health

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]